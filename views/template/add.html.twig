{% extends 'base.html.twig' %}
{% block title %}
<title>{{ title }}</title>
{% endblock %}
{% block body %}
   <body>
   <form action="/add" class="needs-validation text-center border border-light p-5" novalidate method="post">
       <div class="form-group">
           <label for="user_name">Username:</label>
           <input type="text" class="form-control mb-4" id="username" placeholder="Enter username" name="user_name" required>
           <div class="valid-feedback">Valid.</div>
           <div class="invalid-feedback">Please fill out this field.</div>
       </div>
       <div class="form-group">
           <label for="surname">Surname:</label>
           <input type="text" class="form-control" id="surname" placeholder="Enter surname" name="surname" required>
           <div class="valid-feedback">Valid.</div>
           <div class="invalid-feedback">Please fill out this field.</div>
       </div>
       <div class="form-group">
           <label for="age">Age:</label>
           <input type="number" class="form-control mb-4" id="age" placeholder="Enter age" name="age" required>
           <div class="valid-feedback">Valid.</div>
           <div class="invalid-feedback">Please fill out this field.</div>
       </div>
       <div class="form-group">
           <label for="user_group">Group:</label>
           <input type="text" class="form-control" id="user_group" placeholder="Enter group" name="user_group" required>
           <div class="valid-feedback">Valid.</div>
           <div class="invalid-feedback">Please fill out this field.</div>
       </div>
       <div class="form-group">
           <label for="faculty">Faculty:</label>
           <input type="text" class="form-control mb-4" id="faculty" placeholder="Enter faculty" name="faculty" required>
           <div class="valid-feedback">Valid.</div>
           <div class="invalid-feedback">Please fill out this field.</div>
       </div>
       <div class="form-group">
           <label for="sex">Sex:</label>
           <input type="text" class="form-control" id="sex" placeholder="Enter sex" name="sex" required>
           <div class="valid-feedback">Valid.</div>
           <div class="invalid-feedback">Please fill out this field.</div>
       </div>
       <button type="submit" class="btn btn-primary">Add</button>
   </form>
   </body>
{% endblock %}